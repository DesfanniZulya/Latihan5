<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Belanja">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diskon Belanja"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/totalAmountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Masukkan total belanja"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/calculateDiscountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalAmountInput"
        android:layout_marginTop="12dp"
        android:text="Hitung Diskon" />

    <TextView
        android:id="@+id/discountResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculateDiscountButton"
        android:layout_marginTop="16dp"
        android:height="35dp"
        android:background="#95B7A2DC"/>
</RelativeLayout>